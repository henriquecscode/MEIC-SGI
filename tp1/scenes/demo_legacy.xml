<sxs>
    <scene root="demoRoot" axis_length="5" />

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="10" y="10" z="10" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <ortho id="camera2" near="0.1" far="500" left="-20" right="20" bottom="-20" top="20">
            <from x="15" y="15" z="15" />
            <to x="0" y="0" z="0" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="0">
            <location x="15" y="15" z="15" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />

        </omni>
        <spot id="demoLight2" enabled="1" angle="180" exponent="1">
            <location x="10" y="10" z="14" w="1.0" />
            <target x="0" y="0" z="0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </spot>
        <omni id="demoLight3" enabled="0">
            <location x="10" y="15" z="15" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />

        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="demoMaterial2" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="1.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.6" a="1.0" />
            <specular r="0.0" g="0.0" b="0.6" a="1.0" />
        </material>

        <material id="demoMaterial3" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="1.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.6" b="0.0" a="1.0" />
            <specular r="0.0" g="0.6" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="0" y1="0" x2="0.5" y2="1" />
        </primitive>
        <primitive id="demoTriangle">
            <triangle x1="0" y1="0" z1="0" x2="0" y2="0" z2="1" x3="1" y3="0" z3="0" />
        </primitive>
        <primitive id="demoCylinder">
            <cylinder base="5" top="2.5" height="5" slices="20" stacks="3" />
        </primitive>
        <primitive id="demoSphere">
            <sphere radius="1" slices="10" stacks="10" />
        </primitive>
        <primitive id="demoTorus">
            <torus inner="0.10" outer="0.15" slices="20" loops="20" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation></transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="table" />
                <componentref id="ball" />
                <componentref id="donnut" />
            </children>
        </component>

        <component id="floor">
            <transformation>
                
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="ball">
            <transformation>
                <translate x="1" y="1" z="1" />
                <scale x="0.5" y="0.1" z="0.5" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>

        <component id="donnut">
            <transformation>
                <translate x="1" y="1.1" z="1" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>

        <component id="table">
            <transformation></transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="leg1" />
                <componentref id="leg2" />
                <componentref id="leg3" />
                <componentref id="topTable" />
            </children>
        </component>

        <component id="topTable">
            <transformation>
                <translate x="0" y="1" z="0" />
                <scale x="4" y="1" z="4" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoTriangle" />
            </children>
        </component>

        <component id="leg1">
            <transformation></transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="leg" />
            </children>
        </component>

        <component id="leg2">
            <transformation>
                <translate x="2" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="leg" />
            </children>
        </component>

        <component id="leg3">
            <transformation>
                <translate x="1" y="0" z="2" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="leg" />
            </children>
        </component>

        <component id="leg">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="frontSideLeg" />
                <componentref id="rightSideLeg" />
                <componentref id="backSideLeg" />
                <componentref id="leftSideLeg" />
            </children>
        </component>

        <component id="frontSideLeg">
            <transformation>
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="rightSideLeg">
            <transformation>
                <translate x="0" y="0" z="0.5" />
                <rotate axis="y" angle="90" />
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="backSideLeg">
            <transformation>
                <translate x="0.5" y="0" z="0" />
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="leftSideLeg">
            <transformation>
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

    </components>
</sxs>