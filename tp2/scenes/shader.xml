<sxs>
    <scene root="demoRoot" axis_length="5" />

   <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="10" y="10" z="10" />
            <to x="0" y="-2" z="0" />
        </perspective>

        <ortho id="camera2" near="0.1" far="500" left="-20" right="20" bottom="-20" top="20">
            <from x="15" y="15" z="15" />
            <to x="0" y="0" z="0" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>

        <spot id="deskLamp" enabled="1" angle="60" exponent="1">
            <!-- <omni id="deskLamp" enabled="1" > -->
            <location x="2.5" y="8.5" z="7.1" w="1.0" />
            <target x="0" y="-1 " z="-1" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1" g="1" b="1" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </spot>
        <spot id="ceilLamp" enabled="1" angle="180" exponent="1">
            <location x="0" y="19.5" z="0" w="1.0" />
            <target x="0" y="-1 " z="0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </spot>

        <omni id="clock" enabled="1">
            <location x="0" y="10.5 " z="-9.5" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>
        <omni id="demoLight" enabled="0">
            <location x="15" y="15" z="15" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />

        </omni>
        <spot id="demoLight2" enabled="0" angle="180" exponent="1">
            <location x="10" y="10" z="14" w="1.0" />
            <target x="0" y="0" z="0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </spot>
        <omni id="demoLight3" enabled="0">
            <location x="10" y="15" z="15" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="vidral" file="scenes/images/vidral.jpg" />
        <texture id="wall" file="scenes/images/wall.jpg" />
        <texture id="earth" file="scenes/images/earth.jpg" />
        <texture id="wood" file="scenes/images/wood.jpg" />
        <texture id="dryWall" file="scenes/images/dryWall.jpg" />
        <texture id="lightWood" file="scenes/images/lightWood.jpg" />
        <texture id="outside" file="scenes/images/outside.jpg" />
        <texture id="metal" file="scenes/images/metal.jpg" />
        <texture id="states" file="scenes/images/states.jpg" />

    </textures>


    <materials>
        <material id="white" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="0.0" />
        </material>

        <material id="whiteEmitor" shininess="10">
            <emission r="1.0" g="1.0" b="1.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="0.0" />
        </material>
        <material id="doorMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.58" g="0.29" b="0.0" a="1.0" />
            <diffuse r="0.58" g="0.29" b="0.0" a="1.0" />
            <specular r="0.58" g="0.29" b="0.0" a="0.0" />
        </material>

        <material id="black" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="0.0" />
        </material>

        <material id="displayMaterial" shininess="100">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="1" g="0.6" b="0" a="0.0" />
        </material>

        <material id="grey" shininess="5">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="0.0" />
        </material>
        <material id="red" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.87" g="0.12" b="0.12" a="1.0" />
            <specular r="0.87" g="0.12" b="0.12" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="unitRectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>  
        <primitive id="torus">
            <torus inner="0.6" outer="4" slices="20" loops="20" />
        </primitive>
    </primitives>

    <animations>
    </animations>
    <components>
        <component id="demoRoot">
            <transformation></transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="unitCube" />
              
            </children>
        </component>

        <component id="unitCube">
            <transformation></transformation>
            <materials>
                <material id="red" />
            </materials>
            <texture id="wood"  length_s="1" length_t="1"/>
            <children>
                <componentref id="unitFrontSide" />
            </children>
        </component>
 
        <component id="unitFrontSide">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="vidral" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="torus" />
            </children>
            <highlighted r="1.0" g="1.0" b="0.0" scale_h="2" />
        </component>

    

    </components>
</sxs>